{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "target": "esnext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "outDir": "./dist",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "dom"
    ],
    "paths": {
      "@themost/sqljs": [
        "src"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
